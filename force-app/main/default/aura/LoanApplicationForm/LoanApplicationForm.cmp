<aura:component implements="flexipage:availableForRecordHome,force:appHostable,force:hasRecordId" access="global" controller="LoanController" >
<aura:attribute name ="loans" type= "Loan__c[]" />
<aura:attribute name="newLoan" type="Loan__c" default="{
	'sobjectType': 'Loan__c',
	'Amount__c' : 0,
	'Repayment_Period_Months__c':0,
	'Status__c' :'Submitted'
}" />

<aura:handler name="init" action="{!c.doInit}" value="{!this}" />

<lightning:input type="text" aura:id="loanform" name="Name" label="Loan Name"
	value="{!v.newLoan.Name}" required="true" />

<lightning:input type="number" aura:id="loanform" name="Amount" label="Amount of loan needed"
	value="{!v.newLoan.Amount__c}" min="1000" max="5000" formatter="currency" required="true" />
<lightning:input type="number" aura:id="loanform" name="Repayment Period" label="Repayment Period"
	value="{!v.newLoan.Repayment_Period_Months__c}" min="6" max="12" required="true" />
<lightning:input type="text" aura:id="loanform" name="Status" label="Loan Status"
	value="{!v.newLoan.Status__c}" required="true" />
	
<lightning:button variant="brand" label="Give me the money" title="Submit" onclick="{!c.clickCreateLoan}" />
<lightning:button variant="brand" label="Ahh..Nevermind" title="Cancel" onclick="{!c.clickClearLoan}" />

</aura:component>